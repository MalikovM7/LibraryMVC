@model LibraryMVC.ViewModels.BookVM

<div class="container mt-5">
    <h1 class="text-center">Create Book</h1>

    <form asp-action="Create" method="post" class="mt-4">
        <div class="form-group">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label asp-for="Author"></label>
            <input asp-for="Author" class="form-control" />
            <span asp-validation-for="Author" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label asp-for="Genre"></label>
            <input asp-for="Genre" class="form-control" />
            <span asp-validation-for="Genre" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label asp-for="PublishDate"></label>
            <input asp-for="PublishDate" class="form-control" type="date" />
            <span asp-validation-for="PublishDate" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label asp-for="PageCount"></label>
            <input asp-for="PageCount" class="form-control" />
            <span asp-validation-for="PageCount" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label asp-for="Status"></label>
            <select asp-for="Status" asp-items="Html.GetEnumSelectList<LibraryMVC.Models.Enums.Status>()" class="form-control"></select>
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success mt-3">Create</button>
        <a asp-action="Index" class="btn btn-outline-danger mt-3">Cancel</a>
    </form>
</div>